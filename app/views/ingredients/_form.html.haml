= form_for(@ingredient) do |f|
  - if @ingredient.errors.any? 
    #error_explanation
      %h2
        = pluralize(@ingredient.errors.count, "error")  
        prohibited this ingredient from being saved:

      %ul
        -@ingredient.errors.full_messages.each do |msg| 
          %li
            = msg 
    
  .field
    = f.label :name
    %br
    = f.text_field :name 
    %br
  .field
    %br
    = f.label :variety
    %br
    /= f.text_field :variety
    = f.select(:variety, options_for_select([["--Select--","--Select--"],["Green","Green"],["Fruit","Fruit"] ,["Vegetable","Fruit"],["Other","Other"]]))
  .actions
    = f.submit 
